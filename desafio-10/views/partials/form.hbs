{{> navbar}}
<form
    action="/products"
    method="POST"
    class="d-flex justify-content-center align-items-center flex-column"
    style="height: 100vh"
    id="myAnchor"
    onsubmit="return postProduct()"
>
    <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">Product name</label>
        <input
            type="text"
            class="form-control"
            id="nombreProducto"
            aria-describedby="emailHelp"
            name="title"
        />
    </div>
    <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">Product price</label>
        <input
            type="number"
            class="form-control"
            id="precioProducto"
            aria-describedby="emailHelp"
            name="price"
        />
    </div>
    <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">Product img URL</label>
        <input
            type="text"
            class="form-control"
            id="urlProducto"
            aria-describedby="emailHelp"
            name="thumbnail"
        />
    </div>
    <button type="submit" class="btn btn-success" value="Agregar">
        Upload product
    </button>
    <a href="/products" class="btn btn-secondary mt-2">View products</a>
    
</form>