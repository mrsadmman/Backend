html
    head
        title Upload a product
        link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous")
    body
        nav.navbar.navbar-expand-lg.navbar-dark.bg-success
            .container
                a.navbar-brand(href='#') Alcohol store
                button.navbar-toggler(type='button', data-bs-toggle='collapse', data-bs-target='#navbarNav', aria-controls='navbarNav', aria-expanded='false', aria-label='Toggle navigation')
                    span.navbar-toggler-icon
                #navbarNav.collapse.navbar-collapse
                    ul.navbar-nav
                        li.nav-item
                            a.nav-link(href='/') Upload a product
                        li.nav-item
                            a.nav-link(href='/products') Products
        h1(class="d-flex align-items-center justify-content-center") Product list   
        div(class="productList container d-flex flex-direction-column flex-wrap justify-content-center")
            if(stock) 
                table(class="table")
                    thead
                        tr
                            th(scope="col") #
                            th(scope="col") Product name
                            th(scope="col") Price
                            th(scope="col") Picture
                    tbody
                        for item in products
                            tr 
                                th(scope="row")=item.id
                                td=item.title 
                                td=item.price 
                                td
                                    img(src=item.thumbnail, alt=this.title style="width: 100px;")
            else 
                h1 No hay productos   
