<html>
    <head>
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
            crossorigin="anonymous"
        />
    </head>

    <body>
        <%- include('../partials/navbar') %> <% if (stock) { %>
        <h1 class="d-flex align-items-center justify-content-center">Product list</h1>
        <div class="productList container d-flex flex-direction-column flex-wrap justify-content-center">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Product name</th>
                        <th scope="col">Price</th>
                        <th scope="col">Picture</th>
                    </tr>
                </thead>
                <tbody>
                    <% products.forEach((product)=>{ %>
                        <tr>
                            <td><%= product.id %></td>
                            <td><%= product.title %></td>
                            <td><%= product.price %></td>
                            <td><img src=<%= product.thumbnail %> style="width: 100px;"></td>
                        </tr>
                    <%}) %>
                </tbody>
            </table>
            <% } else { %>
                <h1>No products found</h1>
            <% } %>
        </div>
    </body>
</html>